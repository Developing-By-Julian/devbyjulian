<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/header') %>
    <title>Contact - Web & Discord Bot Developer</title>
</head>
<body class="bg-dark text-white">
    <div class="container">
        <h1 class="mt-5">Neem contact op</h1>
        <form action="/contact" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Naam</label>
                <input type="text" class="form-control bg-light text-dark" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Emailadres</label>
                <input type="email" class="form-control bg-light text-dark" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Bericht</label>
                <textarea class="form-control bg-light text-dark" id="message" name="message" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Verzenden</button>
        </form>
    </div>
    <%- include('partials/footer') %>
</body>
</html>
